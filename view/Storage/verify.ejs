<%- include ('layouts/main-header.ejs') %>
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left p-5">
                    <div class="brand-logo">
                        <h1 class="text-center">
                            <span class="logoIcon">M</span><%= title %></h1>
                    </div>
                    <% if (status) { %>
                        <h2 class="font-weight-light text-center badge-gradient-success"><%= message %></h2>
                    <% }else{ %>
                        <h2 class="font-weight-light text-center badge-gradient-warning"><%= message %></h2>
                    <% }%>
                    <h4 class="text-center mt-4 font-weight-light"><a href="/login" class="text-primary">Login</a>
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<%- include ('layouts/main-footer.ejs') %>
